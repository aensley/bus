{
  "name": "@aensley/bus",
  "version": "0.0.9",
  "description": "Basic URL Shortener for Cloudflare Pages",
  "repository": {
    "type": "git",
    "url": "https://github.com/aensley/bus.git"
  },
  "author": {
    "name": "Andrew Ensley",
    "email": "aensley@users.noreply.github.com",
    "url": "https://andrewensley.com"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/aensley/bus/issues/new?assignees=aensley&labels=bug%2Ctriage&template=bug-report.yml&title=%5BBug%5D%3A+"
  },
  "funding": [
    "https://github.com/sponsors/aensley",
    "https://paypal.me/AndrewEnsley"
  ],
  "homepage": "https://github.com/aensley/bus#readme",
  "dependencies": {
    "@cloudflare/pages-plugin-cloudflare-access": "^1.0.3",
    "@cloudflare/pages-plugin-sentry": "^1.1.1",
    "@fortawesome/fontawesome-svg-core": "^6.4.2",
    "@fortawesome/free-solid-svg-icons": "^6.4.2",
    "@noble/hashes": "^1.3.2",
    "@types/valid-url": "^1.0.4",
    "bootstrap": "^5.3.1",
    "datatables.net-bs5": "^1.13.6",
    "jquery": "^3.7.1",
    "valid-url": "^1.0.9"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20230904.0",
    "@semantic-release/git": "^10.0.1",
    "@sentry/browser": "^7.68.0",
    "@sentry/tracing": "^7.68.0",
    "@types/jest": "^29.5.4",
    "@types/node": "^20.5.9",
    "axios": "^1.5.0",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "del": "^7.1.0",
    "gulp": "^4.0.2",
    "gulp-cli": "^2.3.0",
    "gulp-file-include": "^2.3.0",
    "gulp-htmlmin": "^5.0.1",
    "gulp-imagemin": "^8.0.0",
    "gulp-replace": "^1.1.4",
    "gulp-sass": "^5.1.0",
    "gulp-sourcemaps": "^v3.0.0",
    "imagemin-svgo": "^10.0.1",
    "jest": "^29.6.4",
    "jest-runner-groups": "^2.2.0",
    "live-server": "^1.2.2",
    "pre-commit": "^1.2.2",
    "prettier": "^3.0.3",
    "rimraf": "^5.0.1",
    "sass": "^1.66.1",
    "standard": "^17.1.0",
    "string-replace-loader": "^3.1.0",
    "through2": "^4.0.2",
    "ts-jest": "^29.1.1",
    "ts-standard": "^12.0.2",
    "typescript": "^5.2.2",
    "vinyl-named": "^1.1.0",
    "webpack-stream": "^7.0.0"
  },
  "pre-commit": [
    "precommit-msg",
    "test"
  ],
  "scripts": {
    "precommit-msg": "echo Running pre-commit checks...",
    "clean": "gulp clean",
    "format": "prettier --write .",
    "test": "ts-standard && prettier --check . && jest --group=unit --coverage --verbose",
    "build": "npm run clean && gulp",
    "watch": "npm run build && gulp watch",
    "update": "npx --yes npm-check-updates -u && npm update",
    "start": "live-server dist",
    "integration-test": "jest --group=integration --verbose",
    "setup": "npm ci && npm run prepare-hook",
    "prepare-hook": "cp -a prepare-commit-msg .git/hooks/prepare-commit-msg && chmod +x .git/hooks/prepare-commit-msg"
  },
  "type": "module",
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/npm",
        {
          "npmPublish": false
        }
      ],
      [
        "@semantic-release/git",
        {
          "assets": [
            "package.json"
          ],
          "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
        }
      ],
      "@semantic-release/github"
    ]
  },
  "eslintConfig": {
    "extends": "standard-with-typescript",
    "parserOptions": {
      "project": "./tsconfig.json"
    }
  },
  "ts-standard": {
    "globals": [],
    "ignore": [
      "/tests/**/*.ts",
      "/gulpfile.js"
    ]
  },
  "prettier": {
    "tabWidth": 2,
    "printWidth": 120,
    "useTabs": false,
    "endOfLine": "lf",
    "trailingComma": "none",
    "semi": false,
    "singleQuote": true,
    "arrowParens": "always",
    "bracketSameLine": true,
    "bracketSpacing": true,
    "embeddedLanguageFormatting": "auto",
    "htmlWhitespaceSensitivity": "css",
    "insertPragma": false,
    "jsxSingleQuote": false,
    "proseWrap": "preserve",
    "quoteProps": "as-needed",
    "requirePragma": false,
    "vueIndentScriptAndStyle": false
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "runner": "groups",
    "coverageThreshold": {
      "global": {
        "lines": 80
      }
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
